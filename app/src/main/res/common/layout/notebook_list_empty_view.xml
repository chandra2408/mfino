<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/nb_tile_empty_shape"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:srcCompat="@drawable/ic_z_illustration" />

        <TextView
            style="@style/NoNotesOrFilesYe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="220pt"
            android:height="22pt"
            android:fontFamily="@font/nicolas_desle_pantra_regular"
            android:gravity="center"
            android:lineSpacingMultiplier="1.25"
            android:text="no notes or files yet"
            android:textSize="18sp"
            app:customFontName="@{@string/font_pantra_bold}" />

        <TextView
            style="@style/CreateANotebookTo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="298px"
            android:fontFamily="@font/nicolas_desle_pantra_regular"
            android:gravity="center"
            android:lineSpacingMultiplier="1.25"
            android:text="create a notebook to store notes, upload docs and share with your classmates."
            android:textSize="12sp" />

    </LinearLayout>
</layout>

